<%- include('partials/headerLogin'); -%>
<h1>Wellcome to UniCourses</h1>
<div class="container" autocomplete="off">
  <form action="/login" method="POST" class="login-email">
    <img class="mb-4 main-pos" src="imagini/header_logo_image.png" alt="" width="200" height="72">
    <p class="login-text" style="font-size: 2rem; font-weight: 800;">Authentification</p>
    <div class="input-group">
      <input type="email" placeholder="Email" name="email" autocomplete="off" required autofocus>
    </div>
    <div class="input-group">
      <input type="password" placeholder="Password" name="password"  autocomplete="off" required>
    </div>
    <div class="input-group">
      <button name="submit" class="btn">Login</button>
    </div>
    <p class="login-register-text">Don't have a account?<a href="/register">Register here!</a></p>
  </form>
</div>
<%- include('partials/footer'); -%>
