<%- include('partials/header'); -%>
<div class="box" id="heading">
  <h1 class="article-heading"><%= ArtTitle %></h1>
</div>
<div class="box">
  <%  newListArt.forEach(function(article){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=article._id%>" onChange="this.form.submit()">
      <p class="article-element"><%=article.title%><br>
        <%=article.content%><br>
        <%=article.description%>
      </p>
    </div>
    <input type="hidden" name="listName" value=""></input>
  </form>
  <%  }) %>
  <form class="item" action="/articles" method="post">
    <input type="text" name="newTitle" placeholder="Enter Article Title" autocomplete="off">
    <input type="text" name="newLink" placeholder="Enter Link" autocomplete="off">
    <input type="text" name="newDescription" placeholder="Enter Description" autocomplete="off">
    <button type="submit" name="list" value="">+</button>
  </form>
</div>

<%- include('partials/footer'); -%>
